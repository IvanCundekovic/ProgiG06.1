// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================================
// 1. AUTH.JS / NEXTAUTH MODELI (OBVEZNI ZA ADAPTER)
// ==========================================================

// Model 'User' - Korišten za pohranu korisničkih podataka
model User {
  // Auth.js zahtijeva String ID
  id String @id @default(cuid())

  // Vaša aplikacijska polja
  email        String   @unique
  passwordHash String? // Koristi se za lokalnu prijavu (Credentials provider)
  name         String?
  role         Role     @default(STUDENT) // Vaš prilagođeni enum
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Polja za Auth.js
  emailVerified DateTime? // Obavezno za Auth.js User
  image         String? // Obavezno za Auth.js User

  // Relacije
  accounts Account[] // Bilo je 'oauthAccounts', sada je 'accounts'
  sessions Session[]

  // Mapiranje na tablicu u bazi, ako želite da se zove 'users' (NextAuth default)
  @@map("users")
}

// Model 'Account' - Korišten za pohranu OAuth tokena i veza
model Account {
  // Standardna Auth.js polja
  id                String @id @default(cuid())
  userId            String // Povezuje se na User.id (koji je sada String)
  type              String // npr. "oauth", "email", "credentials"
  provider          String
  providerAccountId String

  // Tokeni (NextAuth zahtijeva sva ova polja, neka su @db.Text)
  refresh_token String? @db.Text
  access_token  String? @db.Text
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String? @db.Text
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Model 'Session' - Korišten za pohranu sesija
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique // Auth.js zahtijeva ovo polje
  userId       String // Povezuje se na User.id
  expires      DateTime // Auth.js zahtijeva ovo polje

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Model 'VerificationToken' - Obavezan za Email providera, iako ga ne koristite, mora postojati.
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==========================================================
// 2. ENUMI
// ==========================================================
enum Role {
  STUDENT
  INSTRUCTOR
  ADMINISTRATOR
}
