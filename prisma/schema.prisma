// Simplified Prisma schema for Google Calendar integration
// Basic functionality without bookings

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================================
// AUTH.JS / NEXTAUTH MODELS
// ==========================================================

model User {
  id String @id @default(cuid())

  // Application fields
  email        String   @unique
  passwordHash String?
  name         String?
  role         Role     @default(STUDENT)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Auth.js required fields
  emailVerified DateTime?
  image         String?

  // Relations
  accounts               Account[]
  sessions               Session[]
  googleCalendarSettings GoogleCalendarSettings?
  liveWorkshops          LiveWorkshop[] // objava radionica

  @@map("users")
}

model Account {
  id                String @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  // Tokens
  refresh_token String? @db.Text
  access_token  String? @db.Text
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String? @db.Text
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==========================================================
// GOOGLE CALENDAR
// ==========================================================

model GoogleCalendarSettings {
  id     String @id @default(cuid())
  userId String @unique

  // OAuth za Google Calendar
  accessToken    String   @db.Text
  refreshToken   String   @db.Text
  tokenExpiresAt DateTime

  // jedinstveni id
  calendarId String 
  scope      String? 

  syncEnabled Boolean @default(true)
  timeZone    String  @default("Europe/Zagreb")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("google_calendar_settings")
}

// radionice
model LiveWorkshop {
  id          String   @id @default(cuid())

  title       String
  description String?  @db.Text
  
  startTime   DateTime
  endTime     DateTime
  duration    Int // trajanje radionice u minutama
  timeZone    String @default("Europe/Zagreb")
  
  // relacije za instruktora
  instructorId String
  instructor   User @relation(fields: [instructorId], references: [id], onDelete: Cascade)
  
  maxParticipants     Int
  currentParticipants Int @default(0)
 
  prerequisites   String? @db.Text
  difficultyLevel String? // beginner, intermediate, advanced
  
  // streaming???
  streamingUrl    String?
  meetingId       String?
  meetingPassword String?
  
  requiredIngredients String? @db.Text // JSON list
  requiredEquipment   String? @db.Text // JSON list
  preparationNotes    String? @db.Text
  
  recordingUrl String?
  recordingId  String?
  
  // Google Calendar id
  googleCalendarEventId String? @unique // Event ID in instructor's Google Calendar
  
  // stanje radionice
  status WorkshopStatus @default(SCHEDULED)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([instructorId])
  @@index([startTime])
  @@index([status])
  @@map("live_workshops")
}

// ==========================================================
// ENUMI
// ==========================================================

enum Role {
  STUDENT
  INSTRUCTOR
  ADMINISTRATOR
}

enum WorkshopStatus {
  SCHEDULED   
  IN_PROGRESS 
  COMPLETED   
  CANCELLED  
}
