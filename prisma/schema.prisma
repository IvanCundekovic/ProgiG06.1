generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String                  @id @default(cuid())
  email                  String                  @unique
  passwordHash           String?
  name                   String?
  role                   Role                    @default(STUDENT)
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  emailVerified          DateTime?
  image                  String?
  accounts               Account[]
  courses                Course[]
  googleCalendarSettings GoogleCalendarSettings?
  lessonAnswers          LessonAnswer[]
  lessonQuestions        LessonQuestion[]
  lessonReviews          LessonReview[]
  liveWorkshops          LiveWorkshop[]
  quizResults            QuizResult[]
  sessions               Session[]
  workshopRegistrations  WorkshopRegistration[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model GoogleCalendarSettings {
  id             String   @id @default(cuid())
  userId         String   @unique
  accessToken    String
  refreshToken   String
  tokenExpiresAt DateTime
  calendarId     String
  scope          String?
  syncEnabled    Boolean  @default(true)
  timeZone       String   @default("Europe/Zagreb")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("google_calendar_settings")
}

model LiveWorkshop {
  id                    String                 @id @default(cuid())
  title                 String
  description           String?
  startTime             DateTime
  endTime               DateTime
  duration              Int
  timeZone              String                 @default("Europe/Zagreb")
  instructorId          String
  maxParticipants       Int
  currentParticipants   Int                    @default(0)
  prerequisites         String?
  difficultyLevel       String?
  streamingUrl          String?
  meetingId             String?
  meetingPassword       String?
  meetingUrl            String?
  requiredIngredients   String?
  requiredEquipment     String?
  preparationNotes      String?
  requirements          String?
  recordingUrl          String?
  recordingId           String?
  googleCalendarEventId String?                @unique
  calendarSyncedAt      DateTime?
  status                WorkshopStatus         @default(UPCOMING)
  lastConnectionStatus  String?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  instructor            User                   @relation(fields: [instructorId], references: [id], onDelete: Cascade)
  registrations         WorkshopRegistration[]

  @@index([instructorId])
  @@index([startTime])
  @@index([status])
  @@map("live_workshops")
}

model Course {
  id           String   @id @default(cuid())
  title        String
  description  String?
  instructorId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  instructor   User     @relation(fields: [instructorId], references: [id], onDelete: Cascade)
  lessons      Lesson[]

  @@index([instructorId])
  @@map("courses")
}

model Lesson {
  id          String           @id @default(cuid())
  title       String
  description String?
  content     String?
  courseId    String
  videoUrl    String?
  published   Boolean          @default(false)
  steps       String?
  ingredients String?
  nutrition   String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  questions   LessonQuestion[]
  reviews     LessonReview[]
  course      Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  quiz        Quiz?

  @@index([courseId])
  @@map("lessons")
}

model Quiz {
  id          String       @id @default(cuid())
  title       String
  description String?
  lessonId    String?      @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  questions   Question[]
  results     QuizResult[]
  lesson      Lesson?      @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@map("quizzes")
}

model Question {
  id            String   @id @default(cuid())
  text          String
  options       String
  correctAnswer Int
  quizId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([quizId])
  @@map("questions")
}

model QuizResult {
  id             String   @id @default(cuid())
  quizId         String
  userId         String
  quizTitle      String
  lessonId       String
  lessonTitle    String
  courseId       String
  courseTitle    String
  userName       String
  answers        String
  score          Int
  totalQuestions Int
  percentage     Int
  isCompleted    Boolean  @default(true)
  completedAt    DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  quiz           Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([quizId])
  @@index([courseId])
  @@map("quiz_results")
}

model LessonReview {
  id                 String    @id @default(cuid())
  courseId           String
  lessonId           String
  userId             String
  userName           String
  rating             Int
  comment            String?
  photoDataUrl       String?
  instructorResponse String?
  responseAt         DateTime?
  responseAuthorId   String?
  responseAuthorName String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  lesson             Lesson    @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([lessonId, userId])
  @@index([lessonId])
  @@index([userId])
  @@map("lesson_reviews")
}

model LessonQuestion {
  id        String         @id @default(cuid())
  courseId  String
  lessonId  String
  userId    String
  userName  String
  question  String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  answers   LessonAnswer[]
  lesson    Lesson         @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([lessonId])
  @@index([userId])
  @@map("lesson_questions")
}

model LessonAnswer {
  id            String         @id @default(cuid())
  questionId    String
  responderId   String
  responderName String
  message       String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  question      LessonQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  responder     User           @relation(fields: [responderId], references: [id], onDelete: Cascade)

  @@index([questionId])
  @@index([responderId])
  @@map("lesson_answers")
}

model WorkshopRegistration {
  id            String                 @id @default(cuid())
  workshopId    String
  userId        String
  userName      String
  registeredAt  DateTime               @default(now())
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt
  notifications WorkshopNotification[]
  user          User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  workshop      LiveWorkshop           @relation(fields: [workshopId], references: [id], onDelete: Cascade)

  @@unique([workshopId, userId])
  @@index([workshopId])
  @@index([userId])
  @@map("workshop_registrations")
}

model WorkshopNotification {
  id             String                   @id @default(cuid())
  registrationId String
  message        String
  type           WorkshopNotificationType @default(GENERAL)
  createdAt      DateTime                 @default(now())
  registration   WorkshopRegistration     @relation(fields: [registrationId], references: [id], onDelete: Cascade)

  @@index([registrationId])
  @@map("workshop_notifications")
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMINISTRATOR
}

enum WorkshopStatus {
  UPCOMING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum WorkshopNotificationType {
  SCHEDULE_CHANGE
  RECONNECTION
  GENERAL
}
